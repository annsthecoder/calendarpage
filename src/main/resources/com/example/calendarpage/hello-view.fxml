<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.calendarpage.HelloController">

    <!-- Top Navigation -->
    <top>
        <VBox>
            <!-- Main Navigation Bar -->
            <HBox spacing="20" style="-fx-background-color: #800080; -fx-padding: 10;">
                <Button text="Logo" style="-fx-text-fill: white; -fx-background-color: black;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Smart Calendar" style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" />
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="AI" style="-fx-text-fill: white; -fx-background-color: black;"/>
                <Button text="Settings" style="-fx-text-fill: white; -fx-background-color: black;"/>
                <Button text="Account" style="-fx-text-fill: white; -fx-background-color: black;"/>
            </HBox>

            <!-- Month Navigation -->
            <HBox spacing="10" style="-fx-background-color: #800080; -fx-padding: 10;">
                <Button text="Previous Month" onAction="#onPreviousMonth" style="-fx-text-fill: white;"/>
                <Label fx:id="monthLabel" text="April 2025" style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" />
                <Button text="Next Month" onAction="#onNextMonth" style="-fx-text-fill: white;"/>
            </HBox>

            <!-- View Toggle Buttons -->
            <HBox spacing="10" style="-fx-background-color: #800080; -fx-padding: 10;">
                <Label text="View:" style="-fx-text-fill: white; -fx-font-weight: bold;" />
                <RadioButton fx:id="dayRadio" text="Day" onAction="#onDayView"/>
                <RadioButton fx:id="weekRadio" text="Week" onAction="#onWeekView"/>
                <RadioButton fx:id="monthRadio" text="Month"/>
            </HBox>
        </VBox>
    </top>

    <!-- Center content -->
    <center>
        <StackPane>
            <!-- Week/Month View -->
            <VBox fx:id="weekView" alignment="CENTER" style="-fx-padding: 20;">
                <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent;">
                    <GridPane fx:id="calendarGrid" hgap="10" vgap="10" style="-fx-padding: 20;">
                        <!-- Will be populated dynamically -->
                    </GridPane>
                </ScrollPane>
            </VBox>

            <!-- Day View (initially hidden) -->
            <VBox fx:id="dayView" visible="false" managed="false" alignment="CENTER" style="-fx-padding: 20;">
                <ScrollPane fitToWidth="true" fitToHeight="true">
                    <GridPane fx:id="dayGrid" hgap="10" vgap="10" style="-fx-padding: 20;">
                        <!-- Will be populated dynamically in controller -->
                    </GridPane>
                </ScrollPane>
            </VBox>
        </StackPane>
    </center>

</BorderPane>
