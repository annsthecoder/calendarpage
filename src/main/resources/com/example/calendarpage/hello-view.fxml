<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<SplitPane fx:id="splitPane" orientation="HORIZONTAL" dividerPositions="0.75"
           xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.calendarpage.HelloController">

    <!-- Left section of the SplitPane (Main Calendar/Content) -->
    <VBox fx:id="mainContent" style="-fx-padding: 20;" minWidth="0">
        <!-- Top Navigation -->
        <VBox>
            <!-- Main Navigation Bar -->
            <HBox spacing="20" style="-fx-background-color: #800080; -fx-padding: 10;">
                <ImageView fx:id="logoImage" fitHeight="100" preserveRatio="true" onMouseEntered="#onLogoHover" onMouseExited="#onLogoExit"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Smart Calendar" style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" />
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="AI" style="-fx-text-fill: white; -fx-background-color: black;" onAction="#toggleAISidebar"/>
                <Button text="Settings" style="-fx-text-fill: white; -fx-background-color: black;"/>
                <Button text="Account" style="-fx-text-fill: white; -fx-background-color: black;"/>
                <Button text="Friends" style="-fx-text-fill: white; -fx-background-color: black;"/>
            </HBox>

            <!-- Month Navigation -->
            <HBox spacing="10" style="-fx-background-color: #800080; -fx-padding: 10;">
                <Button text="Previous Month" onAction="#onPreviousMonth" style="-fx-text-fill: black;"/>
                <Label fx:id="monthLabel" text="April 2025" style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" />
                <Button text="Next Month" onAction="#onNextMonth" style="-fx-text-fill: black;"/>
            </HBox>

            <!-- View Toggle Buttons -->
            <HBox spacing="10" style="-fx-background-color: #800080; -fx-padding: 10;">
                <Label text="View:" style="-fx-text-fill: white; -fx-font-weight: bold;" />
                <RadioButton fx:id="dayRadio" text="Day" onAction="#onDayView"/>
                <RadioButton fx:id="weekRadio" text="Week" onAction="#onWeekView"/>
                <RadioButton fx:id="monthRadio" text="Month"/>
            </HBox>
        </VBox>

        <!-- Center content -->
        <StackPane>
            <!-- Week/Month View -->
            <VBox fx:id="weekView" alignment="CENTER" style="-fx-padding: 20;">
                <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: transparent;">
                    <GridPane fx:id="calendarGrid" hgap="10" vgap="10" style="-fx-padding: 20;">
                        <!-- Will be populated dynamically -->
                    </GridPane>
                </ScrollPane>
            </VBox>

            <!-- Day View (initially hidden) -->
            <VBox fx:id="dayView" visible="false" managed="false" alignment="CENTER" style="-fx-padding: 20;">
                <ScrollPane fitToWidth="true" fitToHeight="true">
                    <GridPane fx:id="dayGrid" hgap="10" vgap="10" style="-fx-padding: 20;">
                        <!-- Will be populated dynamically in controller -->
                    </GridPane>
                </ScrollPane>
            </VBox>
        </StackPane>
    </VBox>

    <!-- Right section of the SplitPane (AI Sidebar) -->
    <!-- Right section of the SplitPane (AI Sidebar) -->
    <VBox fx:id="aiSidebar" style="-fx-background-color: #e6e6fa; -fx-padding: 20;" prefWidth="300" minWidth="0" maxWidth="100000000">
        <Label text="AI Assistant" style="-fx-font-weight: bold; -fx-font-size: 16;" />
        <TextArea promptText="Ask me anything..." prefRowCount="6"/>
        <Button text="Send" />
    </VBox>

</SplitPane>